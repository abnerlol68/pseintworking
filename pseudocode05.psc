Algoritmo triangleArea
	//Declaración de variables
	Definir base Como Real;
	Definir height Como Real;
	Definir area Como Real;
	
	Escribir "--Calculando el area de un triangulo--";
	//Entrada de datos
	Escribir "Introduce el valor de la base: ";
	Leer base;
	Escribir "Introduce el valor de la altura: ";
	Leer height;
	
	//Proceso 
	area = base * height / 2;
	
	//Salida de datos
	Escribir "El area del triangulo tiene un valor de: ", area;
FinAlgoritmo
